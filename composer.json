{
    "name": "ticketpark/dynamic-role-bundle",
    "type": "symfony-bundle",
    "description": "This Symfony2 bundle ads functionalities to dynamically create Symfony Security roles and persist them using Doctrine DBAL.",
    "keywords": ["security", "role"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Ticketpark contributors and others",
            "homepage": "https://github.com/Ticketpark/TicketparkDynamicRoleBundle/contributors"
        }
    ],

    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "~2.1",
        "symfony/security-bundle": "*",
    },

    "autoload": {
        "psr-0": { "Ticketpark\\DynamicRoleBundle": "" }
    },

    "target-dir": "Ticketpark/DynamicRoleBundle"
}
